<% include partials/header %>

<% blogs.forEach(function(blog){ %>
  <div>
    <h2><%=blog.title %></h2>
  </div>
  <img src="<%= blog.image %>">
  <span><%= blog.created.toDateString()%></span>
  <p><%= blog.body.substring(0,100)  %>...</p>
  <a href="/blogs/<%= blog._id%>">Read more...</a>
<%});%>

<% include partials/footer %>